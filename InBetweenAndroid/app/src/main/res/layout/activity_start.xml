<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Start"
        android:background="@drawable/plain"
        >


    <TextView
            android:text="1000"
            android:layout_width="100dp"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_height="30dp" android:id="@+id/txtBox"/>
    <ImageView
            android:id="@+id/Card1"
            android:layout_width="150dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/gray_back"
            android:layout_marginLeft="60dp"
            android:layout_height="225dp"  />
    <ImageView
            android:id="@+id/Card2"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/gray_back"
            android:layout_height="225dp" />
    <ImageView
            android:id="@+id/Card3"
            android:layout_marginTop="40dp"
            android:layout_alignParentEnd="true"
            android:layout_width="150dp"
            android:src="@drawable/gray_back"
            android:layout_marginRight="60dp"
            android:layout_height="225dp" />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Card2"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtMoney"/>
    <Button
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_below="@id/txtMoney"
            android:layout_marginLeft="370dp"
            android:background="@drawable/bet"
            android:layout_marginTop="3dp"
            android:id="@+id/btnBet"/>
    <Button
            android:text="FOLD"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:background="@drawable/custombutton"
            android:layout_toRightOf="@+id/txtMoney"
            android:layout_below="@id/txtMoney"
            android:id="@+id/btnFold" android:layout_marginLeft="6dp" android:layout_marginTop="-34dp"/>
    <Button
            android:text="Reveal"
            android:layout_below="@id/Card1"
            android:layout_marginLeft="75dp"
            android:layout_width="123dp"
            android:background="@drawable/custombutton"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:id="@+id/btnReveal"/>
    <Button
            android:layout_below="@id/btnReveal"
            android:layout_width="123dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/quit"
            android:layout_marginLeft="75dp"
            android:layout_height="50dp"
            android:id="@+id/btnBack" android:text="BACK"/>
    <RadioButton
            android:text="HIGH"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/Card3"
            android:enabled="false"
            android:background="@drawable/start"
            android:layout_marginLeft="650dp"
            android:id="@+id/rbtnHigh"/>
    <RadioButton
            android:text="LOW"
            android:layout_width="75dp"
            android:layout_below="@id/rbtnHigh"
            android:layout_marginLeft="650dp"
            android:background="@drawable/start"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/rbtnLow"/>

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup"/>

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/congrats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="false"
            app:lottie_rawRes="@raw/congrats"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_alignParentEnd="true"
            android:layout_height="50dp"
            android:background="@drawable/plain"
            android:src="@drawable/on1"
            android:id="@+id/btnSpeakerOn" />
    <ImageButton
            android:layout_width="50dp"
            android:layout_alignParentEnd="true"
            android:layout_height="50dp"
            android:background="@drawable/plain"
            android:src="@drawable/off1"
            android:visibility="invisible"
            android:id="@+id/btnSpeakerOff" />


</RelativeLayout>