<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/characterselect"
        tools:context=".characterSelect">


    <Button
            android:layout_width="150dp"
            android:layout_height="400dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:id="@+id/btnSecu"
            android:background="@drawable/c_secu"

    />
    <Button
            android:background="@drawable/c_mom"
            android:layout_width="150dp"
            android:layout_toRightOf="@id/btnSecu"
            android:layout_marginTop="120dp"
            android:layout_height="400dp"
            android:id="@+id/btnMom"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="400dp"
            android:layout_marginTop="110dp"

            android:layout_toRightOf="@id/btnMom"
            android:background="@drawable/c_doctor"
            android:id="@+id/btnDoctor"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:layout_marginTop="120dp"
            android:layout_toRightOf="@id/btnDoctor"
            android:background="@drawable/c_nurse"
            android:id="@+id/btnNurse"/>
    <Button
            android:background="@drawable/c_aunt"
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:layout_marginTop="120dp"
            android:layout_toRightOf="@id/btnNurse"
            android:id="@+id/btnAunt"/>
</RelativeLayout>