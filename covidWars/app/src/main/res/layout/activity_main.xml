<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="@drawable/cwbg"
        tools:context=".MainActivity">

    <Button
            android:layout_marginTop="220dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/c_start"
            android:id="@+id/btnStart"/>
    <Button
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:layout_height="40dp"
            android:layout_below="@id/btnStart"
            android:layout_marginBottom="10dp"
            android:background="@drawable/c_inst"
            android:id="@+id/btnInstruction"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@id/btnInstruction"
            android:layout_centerHorizontal="true"
            android:background="@drawable/c_quit"
            android:id="@+id/btnQuit"/>
</RelativeLayout>